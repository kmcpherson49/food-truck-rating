<h1 class="title">Sign up</h1>
<form class="signup">
    <div class="field">
        <label class="label">Username</label>
        <div class="control">
          <input class="usernameInput" type="username" placeholder="e.g. alex1234">
        </div>
      </div>

  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <input class="emailInput" type="email" placeholder="e.g. alex@example.com">
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <input class="passwordInput" type="password" placeholder="********">
    </div>
  </div>

  <button class="button is-primary">Sign up</button>
</form>
